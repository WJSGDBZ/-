  /* background-color:#FF8500; */
  background:linear-gradient(rgb(194,62,9),rgb(255,133,0));
  width: 750rpx;
  height: 300rpx;
  position: relative;
  border-bottom: 1rpx solid red;
}
.order-head-image{
  
  width: 100%;
  height: 100%;
}

.order-title{
  position: absolute;
  left: 20rpx;
  font-size: 100rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx blue,0 0 20rpx rgb(255, 0, 0),0 0 30rpx rgb(0, 247, 255);
}
.order-express{
  position: relative;
  margin:40rpx auto 0 auto;
  border-radius: 30rpx;
  width: 650rpx;
  height: 280rpx;
  background-color: rgb(9, 177, 243);
}

.order-computer{
  position: relative;
  margin:40rpx auto 0 auto;
  border-radius: 30rpx;
  width: 650rpx;
  height: 280rpx;
  background-color: rgb(8, 174, 185);

}

.order-electric{
  position: relative;
  margin:40rpx auto 0 auto;
  border-radius: 30rpx;
  width: 650rpx;
  height: 280rpx;
  background-color: rgb(241, 206, 7);
}

.order-express-text,.order-computer-text,.order-electric-text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 60rpx;
  font-weight: 900;
  color: white;
  text-shadow:0 0 5rpx yellowgreen,0 0 10rpx rgb(205, 120, 50);
}
