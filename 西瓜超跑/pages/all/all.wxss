page {
  font-size: 36rpx;
  background-color: #f2f2f2;
}
h1{

  font-size: 48rpx;
}
.scroll_box{
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  opacity: 0.6;
  position: fixed;
  bottom: 1px;
  z-index: 999;
  color: rgb(255, 133, 0);
  font-size: 28rpx;
  white-space: nowrap;
  }
.jump{
  height: 100%;
  width: auto;
  overflow:hidden;
}
.jump view
{
  display: inline-block;
  text-align: center;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-left: 1px solid #f2f2f2;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.514);
  background-color: black;
  border-radius: 5px;
}

#container {
  display: flex;
  flex-direction: column;
}
.title_container {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 10rpx;
}
/*需要修改*/
.nav_container{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 10rpx;

}
.re_apply{
  margin-top: 10%;
  position: fixed;
  width: 100%;
}
.nav_container button{
  font-size: 32rpx;
}
.message_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}
.messqge-image{
  width: 200rpx;
  position: absolute;
  top: -100rpx;
  left: 30rpx;
}
.message_reason{
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-weight: bold;
  font-size: 30rpx;
  color:#d4bebe;
}
.message {
  width: 95%;
  height: 300rpx;
  margin: 10rpx auto;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.514);
  background-color: rgb(243, 239, 239);
  border-radius: 5px;
}
.ex_message_detail{
  left: 15%;
  top: 100rpx;
  position: fixed;
  z-index: 999;
  display: flex;
  flex-direction: column;
  height: 800rpx;
  width: 70%;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.514);
  background-color: rgb(243, 239, 239);
  border-radius: 5px;
}
.ex_message_detail text{
  padding: 10rpx 30rpx;
  font-size: 12px;
}
.ex_image_detail{
  display: flex;
  flex-direction: row;
}
.ex_image_detail image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 15rpx;
  margin-left: -20rpx;
}
.message_detail {
  display: flex;
  flex-direction: column;
}

.message_title {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 95%;
  height: 80rpx;
  border-bottom: 1px solid lightgray;
  margin: 0 auto;
}

.message_text {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.message_text text{
  color: gray;
  font-size: 35rpx;
}

.tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 15px;
  color: #777;
}
.on {
  color: rgb(255, 153, 0);
  border-bottom: 5rpx solid rgb(255, 153, 0);
}

.order-cost{
  font-weight: bold;
  font-size: 30rpx;
  color:#d4bebe;
}
.order-address{
  margin-bottom: 5rpx;
  font-size: 25rpx;
  color: #ac6868;
}
.order-cretime{
  font-size: 20rpx;
  margin-bottom: 5rpx;
  color: #d4bebe;
}
.order-no{
  margin-bottom: 5rpx;
  font-size: 20rpx;
  color: #d4bebe;
}
.order-btn{
  position: absolute;
  z-index: 99;
  border-radius: 10rpx;
  bottom: 30rpx;
  right: 50rpx;
  height: 60rpx;
  width: 170rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 60rpx;
  color: white;
  background-color: #ad4a4a;
}
.order-type{
  font-weight: bolder;
  color: #ad4a4a;
  margin-left: 20rpx;
}
.order-image{
  width: 50rpx;
  height: 50rpx;
}
