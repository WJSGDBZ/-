.user_info{
  height: 530rpx;
  width: 750rpx;
  /* background-color:rgb(255, 133, 0); */
  background:linear-gradient(rgb(194,62,9),rgb(255,133,0));
  position: relative;
}
#login_btn{
  display: block;
  width: 200rpx;
  margin-top: 200rpx;
  margin-left: 280rpx;
  float: left;
  background-color: rgb(255, 133, 0);
  border: 1px solid white;
  border-radius: 50px;
  color: white;
  box-shadow: 1px 1px 10px rgb(196, 131, 131);
}

.head_name{
  height: 80rpx;
  color: rgb(255, 133, 0);
  font-weight: bolder;
  font-size: 40rpx;
  text-align: center;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
}

.userinfo-panel{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 660rpx;
  /* background-color: rgb(245, 245, 245); */
  background:linear-gradient(rgb(187, 1, 1),rgb(6, 6, 126));
  height: 400rpx;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 20rpx rgba(46, 46, 46, 0.432);
  border: 1rpx solid rgb(153, 153, 153);
}

